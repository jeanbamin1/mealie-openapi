{
  "openapi": "3.1.0",
  "info": {
    "title": "Mealie GPT Assistant API (Courses Compatibles)",
    "version": "1.6.2",
    "description": "Assistant GPT connect\u00e9 \u00e0 Mealie avec ajout fonctionnel d'ingr\u00e9dients \u00e0 la liste de courses"
  },
  "servers": [
    {
      "url": "https://mealie.aptitech.fr/api"
    }
  ],
  "paths": {
    "/households/mealplans": {
      "post": {
        "summary": "Ajouter une recette au calendrier des repas",
        "operationId": "addToMealplan",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "string",
                    "format": "date"
                  },
                  "entryType": {
                    "type": "string",
                    "enum": [
                      "breakfast",
                      "lunch",
                      "dinner",
                      "snack"
                    ]
                  },
                  "recipeId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "title": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  }
                },
                "required": [
                  "date",
                  "entryType",
                  "recipeId"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Recette ajout\u00e9e au calendrier"
          }
        }
      }
    },
    "/households/shopping/items": {
      "post": {
        "summary": "Ajouter un ingr\u00e9dient \u00e0 une liste de courses",
        "operationId": "addShoppingItem",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "quantity": {
                    "type": "number",
                    "default": 1
                  },
                  "note": {
                    "type": "string",
                    "example": "Cuisse de poulet"
                  },
                  "shoppingListId": {
                    "type": "string"
                  },
                  "isFood": {
                    "type": "boolean",
                    "default": false
                  },
                  "disableAmount": {
                    "type": "boolean",
                    "default": true
                  },
                  "foodId": {
                    "type": "string",
                    "nullable": true
                  },
                  "unitId": {
                    "type": "string",
                    "nullable": true
                  }
                },
                "required": [
                  "shoppingListId",
                  "note",
                  "quantity",
                  "isFood",
                  "disableAmount"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ingr\u00e9dient ajout\u00e9 avec succ\u00e8s"
          }
        }
      }
    },
    "/households/shopping/lists": {
      "get": {
        "summary": "Lister les listes de courses disponibles",
        "operationId": "getShoppingLists",
        "responses": {
          "200": {
            "description": "Listes de courses disponibles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/recipes": {
      "get": {
        "summary": "Rechercher des recettes avec un mot-cl\u00e9",
        "operationId": "searchRecipes",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Mot-cl\u00e9 \u00e0 rechercher dans les recettes"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des recettes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "slug": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}